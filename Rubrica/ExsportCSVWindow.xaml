<Window x:Class="Rubrica.ExsportCSVWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rubrica"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        FontSize="16"
        WindowStartupLocation="CenterScreen"
        Title="Esporta in CSV" Height="185" Width="525">
    
    <StackPanel Margin="10">
        <Label Content="File CSV di destinazione"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
            <TextBox x:Name="textBoxFileCSV" IsReadOnly="True" Width="445" Padding="5" Margin="0,0,10,0" />
            <Button x:Name="buttonScegliCSV" Click="buttonScegliCSV_Click" Padding="5" Content=". . ." Cursor="Hand"/>
        </StackPanel>

        <Button x:Name="buttonEsportaCSV" Click="buttonEsportaCSV_Click" Content="Esporta" Padding="5"/>

    </StackPanel>
</Window>
