<Window x:Class="Rubrica.NuovaRubricaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rubrica"
        mc:Ignorable="d"
        FontSize="16"
        MinHeight="170"
        MaxHeight="170"
        Title="Nuova rubrica" Height="170" Width="500">
    <StackPanel Margin="10">
        <Label Content="Nome nuova rubrica"/>
        <TextBox x:Name="textBoxNuovaRubrica" Padding="5" TextChanged="textBoxNuovaRubrica_TextChanged" Margin="0,0,0,10"/>

        <Button x:Name="buttonCrea" Content="Crea" Padding="5" Click="buttonCrea_Click"/>
    </StackPanel>
</Window>
